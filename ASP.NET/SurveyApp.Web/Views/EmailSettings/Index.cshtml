</div>

@section Scripts {
    <script>
        // Sample customer data for demo purposes
        const customerData = [
            { id: 1, name: "Juan Pérez", email: "juan.perez@example.com" },
            { id: 2, name: "María García", email: "maria.garcia@example.com" },
            { id: 3, name: "Carlos Rodríguez", email: "carlos.rodriguez@example.com" },
            { id: 4, name: "Ana Martínez", email: "ana.martinez@example.com" },
            { id: 5, name: "Pedro López", email: "pedro.lopez@example.com" }
        ];
        
        document.addEventListener('DOMContentLoaded', function() {
            // Initial data
            let selectedSurveyId = 0;
            let emails = [];
            
            @if (Model.DeliveryConfig.EmailAddresses != null && Model.DeliveryConfig.EmailAddresses.Any())
            {
                @:emails = [@string.Join(",", Model.DeliveryConfig.EmailAddresses.Select(e => $"'{e}'"))];
                @:updateEmailList();
            }
            
            // Initialize select survey buttons
            const selectSurveyBtns = document.querySelectorAll('.select-survey-btn');
            selectSurveyBtns.forEach(btn => {
                btn.addEventListener('click', async function() {
                    const surveyId = parseInt(this.getAttribute('data-survey-id'));
                    
                    // Save current config before switching
                    if (selectedSurveyId !== surveyId) {
                        await saveCurrentConfig();
                    }
                    
                    selectedSurveyId = surveyId;
                    document.getElementById('selected-survey-id').value = surveyId;
                    
                    // Update UI
                    const rows = document.querySelectorAll('.survey-table tbody tr');
                    rows.forEach(row => row.classList.remove('bg-gray-50'));
                    
                    if (surveyId === 0) {
                        document.getElementById('global-config-row').classList.add('bg-gray-50');
                        document.getElementById('config-title').textContent = 'Configuración global de email';
                        document.getElementById('config-subtitle').textContent = 'Esta configuración se aplicará como predeterminada para todas las nuevas encuestas';
                        
                        // Cargar configuración global
