
@model SurveysViewModel
@{
    ViewData["Title"] = "Survey Management";
}

<div class="min-h-screen bg-background">
    <div class="container mx-auto pt-20 pb-10 px-4 md:px-6">
        <div class="flex flex-col space-y-6">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div>
                    <h1 class="text-3xl font-bold tracking-tight">Survey Management</h1>
                    <p class="text-muted-foreground mt-1">Create and manage your surveys</p>
                </div>
                
                <div class="flex items-center gap-2">
                    <a asp-controller="SurveyBuilder" asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-file-plus mr-2"></i>
                        Create Survey
                    </a>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="border-b p-3">
                    <div class="flex gap-2 overflow-x-auto pb-1">
                        <a asp-controller="Surveys" asp-action="Index" asp-route-filter="all" 
                           class="btn @(Model.FilterActive == "all" ? "btn-primary" : "btn-outline-primary") btn-sm">
                            All Surveys
                        </a>
                        <a asp-controller="Surveys" asp-action="Index" asp-route-filter="active" 
                           class="btn @(Model.FilterActive == "active" ? "btn-primary" : "btn-outline-primary") btn-sm">
                            Active
                        </a>
                        <a asp-controller="Surveys" asp-action="Index" asp-route-filter="draft" 
                           class="btn @(Model.FilterActive == "draft" ? "btn-primary" : "btn-outline-primary") btn-sm">
                            Draft
                        </a>
                        <a asp-controller="Surveys" asp-action="Index" asp-route-filter="archived" 
                           class="btn @(Model.FilterActive == "archived" ? "btn-primary" : "btn-outline-primary") btn-sm">
                            Archived
                        </a>
                    </div>
                </div>
                
                @if (Model.IsLoading)
                {
                    <div class="flex justify-center items-center p-12">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (Model.Surveys.Any())
                {
                    <div class="card-content p-0">
                        <ul class="divide-y">
                            @foreach (var survey in Model.Surveys)
                            {
                                <li class="p-4 hover:bg-accent/20 transition-colors">
                                    <div class="flex items-center justify-between">
                                        <div class="flex-grow">
                                            <div class="flex items-center justify-between mb-1">
                                                <h3 class="font-medium">@survey.Title</h3>
                                                <span class="badge bg-primary bg-opacity-10 text-primary">
                                                    @survey.ResponseCount responses
                                                </span>
                                            </div>
                                            <p class="text-xs text-muted-foreground line-clamp-1 mb-1">
                                                @survey.Description
                                            </p>
                                            <div class="flex items-center text-xs text-muted-foreground">
                                                <span>Created @survey.CreatedAt.ToString("MMM d, yyyy")</span>
                                                <span class="mx-2">â€¢</span>
                                                <div class="flex items-center">
                                                    <div class="w-16 bg-secondary rounded-full h-1.5 mr-1">
                                                        <div class="bg-primary h-1.5 rounded-full" 
                                                             style="width: @(survey.CompletionRate)%"></div>
                                                    </div>
                                                    <span>@Math.Round(survey.CompletionRate)% completed</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="flex space-x-1 ml-4">
                                            <a asp-controller="SurveyPreview" asp-action="Details" asp-route-id="@survey.Id" 
                                               class="btn btn-ghost btn-icon h-8 w-8" title="View">
                                                <i class="fas fa-eye h-4 w-4"></i>
                                            </a>
                                            <a asp-controller="SurveyResults" asp-action="Details" asp-route-id="@survey.Id" 
                                               class="btn btn-ghost btn-icon h-8 w-8" title="Results">
                                                <i class="fas fa-chart-bar h-4 w-4"></i>
                                            </a>
                                            <a asp-controller="SurveyBuilder" asp-action="Edit" asp-route-id="@survey.Id" 
                                               class="btn btn-ghost btn-icon h-8 w-8" title="Edit">
                                                <i class="fas fa-edit h-4 w-4"></i>
                                            </a>
                                            <form asp-controller="Surveys" asp-action="Delete" asp-route-id="@survey.Id" 
                                                  method="post" onsubmit="return confirm('Are you sure you want to delete this survey?');">
                                                <button type="submit" class="btn btn-ghost btn-icon h-8 w-8 text-danger" title="Delete">
                                                    <i class="fas fa-trash h-4 w-4"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div class="flex flex-col items-center justify-center p-12 text-center">
                        <div class="rounded-full bg-primary bg-opacity-10 p-4 mb-4">
                            <i class="fas fa-file-plus h-6 w-6 text-primary"></i>
                        </div>
                        <h3 class="text-lg font-semibold mb-1">No surveys found</h3>
                        <p class="text-muted-foreground mb-4">Get started by creating your first survey</p>
                        <a asp-controller="SurveyBuilder" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-file-plus mr-2"></i>
                            Create Survey
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
